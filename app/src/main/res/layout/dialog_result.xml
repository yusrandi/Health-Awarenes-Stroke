<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:padding="@dimen/space"
        android:layout_height="match_parent">

    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="@dimen/space" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize">

        <RelativeLayout android:id="@+id/dialog_result_back" android:layout_width="@dimen/space_x5" android:layout_height="match_parent">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_baseline_arrow_back_24"/>
        </RelativeLayout>

        <TextView android:layout_marginStart="@dimen/space_x2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:text="Hasil" android:textStyle="bold" android:textColor="@color/colorFont" android:textSize="@dimen/text_20"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_result_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space"/>

</LinearLayout>