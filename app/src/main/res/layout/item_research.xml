<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/space"
        android:layout_marginEnd="@dimen/space"
        android:layout_marginStart="@dimen/space"
        android:layout_marginBottom="@dimen/space"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="@dimen/space"
            android:layout_height="wrap_content">

        <TextView
                android:textColor="#000000"
                android:fontFamily="@font/nunito_extrabold"
                android:id="@+id/item_research_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/space"
                android:textSize="@dimen/text_18"
        />
        <TextView
                android:textColor="@color/colorPrimaryDark"
                android:maxLines="3"
                android:fontFamily="sans-serif"
                android:id="@+id/item_research_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_16"
        />

        <View
                android:layout_marginTop="@dimen/space"
                android:layout_marginBottom="@dimen/space"
                android:background="@drawable/gradien"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"/>


        <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/item_research_read"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_marginEnd="@dimen/space"
                        android:layout_width="@dimen/space_x2"
                        android:layout_height="@dimen/space_x2"
                        android:src="@drawable/ic_local_library_black_24dp"/>
                <TextView
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_14"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_width="wrap_content"
                        android:text="Baca Selengkapnya"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/item_research_delete"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_marginEnd="@dimen/space"
                        android:layout_width="@dimen/space_x3"
                        android:layout_height="@dimen/space_x3"
                        android:src="@drawable/ic_baseline_clear_all_24"/>
                <TextView
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_14"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_width="wrap_content"
                        android:text="Delete"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>