<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@color/colorPrimary"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResearchDetailActivity">

    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="@dimen/space" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:id="@+id/btn_back"
            android:layout_width="@dimen/space_x5" android:layout_height="match_parent">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_baseline_arrow_back_24_white"/>
        </RelativeLayout>

        <TextView android:layout_marginStart="@dimen/space_x2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:text="Research Detail" android:textStyle="bold" android:textColor="@color/colorWhite" android:textSize="@dimen/text_20"/>

    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@drawable/background_bot" android:layout_marginTop="?attr/actionBarSize" android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView android:id="@+id/research_detail_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="title" android:fontFamily="@font/nunito_extrabold" android:textColor="#000" android:textSize="@dimen/text_24" android:gravity="center"/>
        <TextView android:textColor="@color/colorFont" android:id="@+id/research_detail_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/space_x2"  android:text="@string/app_name" android:textSize="@dimen/text_16"/>

    </LinearLayout>
</RelativeLayout>