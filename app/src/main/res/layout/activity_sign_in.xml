<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              tools:context=".SignInActivity">

    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:padding="36dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView android:layout_gravity="center" android:layout_marginBottom="@dimen/space" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@mipmap/logo"/>
            <TextView
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Silahkan Masuk"
                    android:textColor="#fff" />

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="16dp"
                    android:id="@+id/passeord_text_input_layout"
                    android:layout_width="match_parent"
                    android:hint="Username"
                    app:hintTextColor="#E1E3E6"
                    android:textColorHint="#E1E3E6"
                    android:layout_height="wrap_content">

                <EditText
                        android:textColorHint="#E1E3E6"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:id="@+id/etUser"
                        android:layout_width="match_parent"
                        android:backgroundTint="#6C6969"
                        android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    app:hintTextColor="#E1E3E6"
                    android:textColorHint="#E1E3E6"
                    app:passwordToggleEnabled="true">

                <EditText
                        android:textColorHint="#E1E3E6"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:id="@+id/etPass"
                        android:layout_width="match_parent"
                        android:backgroundTint="#6C6969"
                        android:layout_height="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                    android:textColor="#fff"
                    android:text="Sign In"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/gradien"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            <TextView
                    android:layout_margin="18dp"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="OR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Member baru? Buat Akun"
                    android:textColor="#fff" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>