<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@color/colorPrimary"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViedeoMenuActivity">

    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingStart="@dimen/space"
                  android:layout_width="match_parent" android:layout_height="?attr/actionBarSize">

        <RelativeLayout android:id="@+id/btn_back" android:layout_width="@dimen/space_x5" android:layout_height="match_parent">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                       android:src="@drawable/ic_baseline_arrow_back_24_white"/>
        </RelativeLayout>

        <TextView android:layout_marginStart="@dimen/space_x2" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_centerVertical="true" android:text="Menu Video"
                  android:textStyle="bold" android:textColor="@color/colorWhite" android:textSize="@dimen/text_20"/>

    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/background_bot"
                  android:layout_marginTop="?attr/actionBarSize" android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

                <RelativeLayout android:id="@+id/menu_video_0" android:background="@drawable/gradien" android:layout_width="match_parent" android:layout_height="@dimen/space_x6">

                    <TextView android:layout_centerInParent="true" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:layout_centerVertical="true"
                              android:text="Pemanfaatan Media Aplikasi"
                              android:textStyle="bold" android:textColor="@color/colorWhite"
                              android:textSize="@dimen/text_16"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/menu_video_1" android:layout_marginTop="@dimen/space_x2" android:background="@drawable/gradien" android:layout_width="match_parent"
                                android:layout_height="@dimen/space_x6">
                    <TextView android:layout_centerInParent="true" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:layout_centerVertical="true"
                              android:text="Pengenalan Penyakit Stroke"
                              android:textStyle="bold" android:textColor="@color/colorWhite"
                              android:textSize="@dimen/text_16"/>

                </RelativeLayout>
                <RelativeLayout android:id="@+id/menu_video_2" android:layout_marginTop="@dimen/space_x2" android:background="@drawable/gradien"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/space_x6">
                    <TextView android:layout_centerInParent="true" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:layout_centerVertical="true"
                              android:text="Pencegahan stroke berdasarkan faktor risiko"
                              android:textStyle="bold" android:textColor="@color/colorWhite"
                              android:textSize="@dimen/text_16"/>

                </RelativeLayout>
                <RelativeLayout android:id="@+id/menu_video_3" android:layout_marginTop="@dimen/space_x2" android:background="@drawable/gradien"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/space_x7">

                    <TextView android:gravity="center" android:padding="@dimen/space" android:layout_centerInParent="true" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:layout_centerVertical="true" android:text="Pola makan penderita Hipertensi untuk pencegahan Stroke"
                              android:textStyle="bold" android:textColor="@color/colorWhite" android:textSize="@dimen/text_16"/>

                </RelativeLayout>
                <RelativeLayout android:id="@+id/menu_video_4" android:layout_marginTop="@dimen/space_x2" android:background="@drawable/gradien"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/space_x7">

                    <TextView android:gravity="center" android:padding="@dimen/space" android:layout_centerInParent="true" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:layout_centerVertical="true" android:text="Pencegahan Multimorbiditas Penyakit tidak Menular"
                              android:textStyle="bold" android:textColor="@color/colorWhite" android:textSize="@dimen/text_16"/>

                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</RelativeLayout>