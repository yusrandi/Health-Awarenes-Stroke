<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@color/colorPrimaryDark"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TutorialActivity">

    <LinearLayout
            android:padding="@dimen/space_x2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_x10">

        <TextView android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tutorial" android:textColor="@color/colorWhite" android:fontFamily="@font/nunito_extrabold" android:textSize="@dimen/text_24"/>
    </LinearLayout>
    <RelativeLayout
            android:layout_marginTop="@dimen/space_x10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_bot">

        <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="start" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">


                <TextView android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1. Tutorial Konsultasi" android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/nunito_extrabold" android:textSize="@dimen/text_14"/>
                <ImageView android:layout_marginTop="@dimen/space" android:layout_gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/tutor1"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView android:id="@+id/fast_empty" android:visibility="gone" android:layout_centerInParent="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Belum ada History" android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/nunito_extrabold" android:textSize="@dimen/text_24"/>
        <com.github.ybq.android.spinkit.SpinKitView
                android:visibility="gone"
                android:layout_margin="16dp"
                android:id="@+id/spin_kit_fast"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                app:SpinKit_Color="@color/colorAccent"/>
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutor_navigation"
            android:background="@color/colorWhite"
            app:itemBackground="@color/colorWhite"
            app:itemTextColor="@drawable/selector"
            app:itemIconTint="@drawable/selector"
            android:layout_alignParentBottom="true"
            app:elevation="@dimen/space_x20"
            app:labelVisibilityMode="labeled"
            app:itemIconSize="@dimen/space_x4"
            app:itemTextAppearanceActive="@dimen/text_8"
            app:itemTextAppearanceInactive="@dimen/text_8"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:menu="@menu/menu_navigation">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>